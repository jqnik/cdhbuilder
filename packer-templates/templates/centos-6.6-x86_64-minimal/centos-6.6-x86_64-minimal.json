{
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "centos-6.6-x86_64-minimal",
      "guest_os_type": "RedHat_64",
      "virtualbox_version_file": ".vbox_version",

      "disk_size": 20480,
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "480" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],

      "iso_url": "file:///Users/jkunigk/Downloads/isos/CentOS-6.6-x86_64-minimal.iso",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum_type": "md5",

      "http_directory": "templates/centos-6.6-x86_64-minimal/http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "sudo shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/centos/update.sh",
        "scripts/centos/virtualbox.sh",
        "scripts/centos/vagrant.sh",
        "scripts/centos/cleanup.sh",
        "templates/centos-6.6-x86_64-minimal/scripts/cleanup-minimal.sh",
        "scripts/centos/zerodisk.sh"
      ],
      "execute_command": "sudo -E sh '{{ .Path }}'"
    }
  ],
  "post-processors": [
    "vagrant"
  ]
}
